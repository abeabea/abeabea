<h1>バスケのルール</h1>
<h3>ルール詳細</h3>
<div class="ball">
  <p><%= @ball.rule %></p>
  <p><%= @ball.created_at %></p>

  <% if user_signed_in? %>
   <% if current_user.already_liked?(@ball) %>
    <%= link_to ball_like_path(@ball), method: :delete do %>
      <i class="fa-solid fa-heart"></i><%= @ball.likes.count %>
    <% end %>
  <% else %>
    <%= link_to ball_likes_path(@ball), method: :post do %>
      <i class="fa-solid fa-heart"></i><%= @ball.likes.count %>
     <% end %>
    <% end %>
   <% else %>

      <i class="fa-solid fa-heart"></i><%= @ball.likes.count %>
    <% end %>

   <%= link_to "編集する", edit_ball_path(@ball.id) %>
  </div>

<h2>いいねしたユーザー</h2>
<% @ball.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>


<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@ball, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>


<%= link_to "ルール一覧に戻る", balls_path %>
<%= link_to "編集する", edit_ball_path(@ball.id) %>

